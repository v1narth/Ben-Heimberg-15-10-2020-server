generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  sender    Int
  receiver  Int
  message   String
  subject   String
  createdAt DateTime @default(now())
}

model User {
  id       Int @id @default(autoincrement())
  senderId Int @unique
}
